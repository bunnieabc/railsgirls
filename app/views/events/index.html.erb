<h1>I am Message Board.</h1>
<div class="row ">
<% @events.each do |event| %>
  
  <div class="col-md-6">
  <div class="msg_block">
	<div class="title2 ">
	 	  <strong><%= event.name %></strong>
		<div class="btn-edit">
		  <%= link_to 'Edit', edit_event_path(event)%>
		</div>
		<div class="btn-edit">
		  <%= link_to 'Show', event_path(event)%>
		</div>
		<div class="btn-edit">
		  <%= link_to 'Delete', event_path(event), :method => :delete, :data =>{:confirm => "Are you sure"} %>
		</div>
 	</div>
	<div class="content">
  	 	<%= event.description %>
  	</div>
  	</div>
   	</div>
  
	<% end %>
	</div>
	<div class="new-btn">
	<%= link_to 'New Message', new_event_path %>
	
</div>